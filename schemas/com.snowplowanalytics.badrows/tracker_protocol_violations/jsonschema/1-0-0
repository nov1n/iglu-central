                "type": "string",
                "description": "Tracker protocol violation",
                "maxLength": 128
              }
            },
            "required": [ "key", "value" ],
            "additionalProperties": false
          }
        }
      },
      "required": [ "timestamp", "messages" ],
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
