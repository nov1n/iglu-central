  "type": "object",
  "properties": {
    "failure": {
      "type": "object",
      "description": "Information regarding the size violation",
      "properties": {
        "timestamp": {
          "type": "string",
          "description": "Timestamp at which the failure occurred",
          "format": "date-time"
        },
        "maximumAllowedSizeBytes": {
          "type": "integer",
          "description": "Maximum payload size allowed by the current platform",
          "maximum": 1073741824,
          "minimum": 0
        },
        "actualSizeBytes": {
          "type": "integer",
          "description": "Maximum payload size allowed by the current platform",
          "maximum": 1073741824,
          "minimum": 0
        }
      },
      "required": [ "timestamp", "maximumAllowedSizeBytes", "actualSizeBytes" ],
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "description": "The truncated collector payload that resulted in a size violation",
      "properties": {
        "timestamp": {
          "type": "string",
          "description": "Timestamp at which the payload was collected",
          "format": "date-time"
        },
        "headers": {
          "type": "object",
          "description": "List of the headers part of this collector payload"
        },
        "path": {
          "type": "string",
          "description": "Path requested by this collector payload",
          "maxLength": 256
        },
        "truncatedQueryString": {
          "type": [ "string", "null" ],
          "description": "Query string after truncation to fit the maximum payload size allowed",
          "maxLength": 8192
        },
        "truncatedBody": {
          "type": [ "string", "null" ],
          "description": "Body after truncation to fit the maximum payload size allowed",
          "maxLength": 8192
        }
      },
      "required": [ "timestamp", "headers", "path", "truncatedQueryString", "truncatedBody" ],
      "additionalProperties": false
    },
    "processor": {
      "type": "object",
      "description": "Information about the piece of software responsible for the creation of this size violation",
      "properties": {
        "artifact": {
          "type": "string",
          "description": "Artifact responsible for the creation of this size violation",
          "maxLength": 512
        },
        "version": {
          "type": "string",
          "description": "Version of the artifact responsible for the creation of this size violation",
          "pattern": "^(\\d+\\.\\d+\\.\\d+.*)$",
          "maxLength": 32
        },
        "platform": {
          "type": "string",
          "description": "Platform on which the artifact was running when the size violation occurred",
          "maxLength": 64
        }
      },
      "required": [ "artifact", "version", "platform" ],
      "additionalProperties": false
    }
  },
  "required": [ "failure", "payload", "processor" ],
